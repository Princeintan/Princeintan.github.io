---
interface Props {
  title: string;
  company: string;
  location: string;
  startDate: string;
  endDate: string;
  description: string[];
  technologies?: string[];
}

const {
  title,
  company,
  location,
  startDate,
  endDate,
  description,
  technologies = [],
} = Astro.props;
---

<div
  class="bg-white rounded-lg shadow-md p-6 transition-all duration-300 hover:shadow-lg"
>
  <div class="flex flex-col md:flex-row md:justify-between md:items-start">
    <div>
      <h3 class="text-xl font-semibold text-gray-800">{title}</h3>
      <p class="text-lg text-accent font-medium">{company}</p>
      <p class="text-gray-600 mb-2">{location}</p>
    </div>
    <div class="text-gray-600 text-sm md:text-right mt-2 md:mt-0">
      <p class="inline-block px-3 py-1 bg-gray-100 rounded-full">
        {startDate} - {endDate}
      </p>
    </div>
  </div>

  <div class="mt-4">
    <ul class="list-disc list-inside space-y-2 text-gray-700">
      {description.map((item) => <li>{item}</li>)}
    </ul>
  </div>

  {
    technologies.length > 0 && (
      <div class="mt-4">
        <p class="text-sm font-medium text-gray-700 mb-2">Technologies used:</p>
        <div class="flex flex-wrap gap-2">
          {technologies.map((tech) => (
            <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">
              {tech}
            </span>
          ))}
        </div>
      </div>
    )
  }
</div>
