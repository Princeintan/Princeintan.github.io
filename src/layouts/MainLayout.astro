---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import svgicon from "../../public/prashant.svg";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Prashant Sharma's Portfolio - Mathematics, Programming, and Engineering",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href={svgicon.src} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Fira+Code:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
    <div class="min-h-screen flex flex-col">
      <!-- Fixed header -->
      <div class="fixed top-0 left-0 right-0 z-10 bg-white">
        <Header />
      </div>
      <main class="flex-grow container mx-auto px-4 py-24 md:px-6 lg:px-8">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
