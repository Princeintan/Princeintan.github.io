---
import MainLayout from "../layouts/MainLayout.astro";
import projectsData from "../data/projects.json";

// Get featured projects (limit to 3)
const OnGoingProjects = projectsData.projects.slice(0, 2);

const featuredProjects = projectsData.projects.slice(2, 5);
---

<MainLayout title="Prashant Sharma - Portfolio">
  <section class="py-12 md:py-16 lg:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div>
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-gray-800"
        >
          Hi, I'm <span class="text-accent">Prashant Sharma</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-6">
          Research Assistant at IIT Delhi
        </p>
        <p class="text-lg text-gray-700 mb-8">
          Mathematics graduate with a passion for instrumentation, programming,
          and innovative solutions. I specialize in creating custom hardware and
          software solutions for scientific research.
        </p>

        <div class="flex flex-wrap gap-4">
          <a
            href="/projects"
            class="bg-accent hover:bg-accent/90 text-white px-6 py-3 rounded-md transition-colors font-medium"
          >
            View Projects
          </a>

          <a
            href="/contact"
            class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-6 py-3 rounded-md transition-colors font-medium"
          >
            Contact Me
          </a>
        </div>
        <p class="text-lg text-green-700 mb-4 py-2">
          ORCID: <a href="https://orcid.org/0009-0006-1018-3666" target="_blank"
            >0009-0006-1018-3666</a
          >
        </p>
      </div>

      <div class="relative">
        <div
          class="relative w-full h-72 md:h-96 bg-gray-200 rounded-lg overflow-hidden"
        >
          <img
            src="/public/images/profile.jpg"
            alt="Prashant Sharma"
            class="w-full h-full object-cover"
            onerror="this.onerror=null; this.src='/images/placeholder.jpg';"
          />
        </div>
        <div
          class="absolute -bottom-4 -right-4 bg-white p-4 rounded-lg shadow-lg"
        >
          <p class="font-mono text-sm">
            <span class="text-accent">Math</span> + <span class="text-accent"
              >Engineering</span
            > + <span class="text-accent">Code</span>
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12">
    <div class="mb-8 flex justify-between items-center">
      <h2 class="text-3xl font-bold">Ongoing Projects</h2>
      <a
        href="/projects"
        class="text-accent hover:text-accent/80 font-medium flex items-center gap-1"
      >
        View all projects
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        OnGoingProjects.map((project) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg">
            <div class="relative">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-48 object-cover"
                onerror="this.onerror=null; this.src='/images/placeholder.jpg';"
              />
              {project.organization && (
                <div class="absolute top-0 right-0 bg-accent text-white px-3 py-1 text-sm font-medium">
                  {project.organization}
                </div>
              )}
            </div>
            <div class="p-5">
              <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
              <p class="text-gray-600 text-sm mb-2">{project.date}</p>
              <p class="text-gray-700 mb-4">{project.description}</p>

              <a
                href={project.link}
                class="inline-block bg-accent text-white px-4 py-2 rounded hover:bg-accent/90 transition-colors"
              >
                Read
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section class="py-12">
    <div class="mb-8 flex justify-between items-center">
      <h2 class="text-3xl font-bold">Featured Projects</h2>
      <a
        href="/projects"
        class="text-accent hover:text-accent/80 font-medium flex items-center gap-1"
      >
        View all projects
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        featuredProjects.map((project) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg">
            <div class="relative">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-48 object-cover"
                onerror="this.onerror=null; this.src='/images/placeholder.jpg';"
              />
              {project.organization && (
                <div class="absolute top-0 right-0 bg-accent text-white px-3 py-1 text-sm font-medium">
                  {project.organization}
                </div>
              )}
            </div>
            <div class="p-5">
              <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
              <p class="text-gray-600 text-sm mb-2">{project.date}</p>
              <p class="text-gray-700 mb-4">{project.description}</p>

              <a
                href={project.link}
                class="inline-block bg-accent text-white px-4 py-2 rounded hover:bg-accent/90 transition-colors"
              >
                Read
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section
    class="py-12 bg-gray-50 -mx-4 md:-mx-6 lg:-mx-8 px-4 md:px-6 lg:px-8"
  >
    <div class="max-w-5xl mx-auto text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">About Me</h2>
      <!-- <p class="text-lg text-gray-700">
        I graduated with a BSMS degree in Mathematics with a minor in Physics
        from the Indian Institute of Science Education and Research (IISER),
        Thiruvananthapuram. Currently, I'm working as a Research Assistant at
        IIT Delhi, focusing on instrumentation setup for testing Triboelectric
        Nanogenerator Devices in Vacuum.
      </p> -->
      <p class="text-lg text-gray-700 mt-4 text-left">
        I combine my background in mathematics with hands-on skills in
        programming, electronics, and instrumentation to create innovative
        solutions for scientific problems.
      </p>
    </div>
  </section>
</MainLayout>
